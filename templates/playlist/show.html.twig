{% extends 'base.html.twig' %}

{% block title %}Playlist{% endblock %}

{% block body %}
    <h1>Playlist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ playlist.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ playlist.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ playlist.description }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ playlist.link }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ playlist.publishedAt ? playlist.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ playlist.image }}</td>
            </tr>
            <tr>
                <th>DisabledAt</th>
                <td>{{ playlist.disabledAt ? playlist.disabledAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_playlist_index') }}">back to list</a>

    <a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}">edit</a>

    {{ include('playlist/_delete_form.html.twig') }}
{% endblock %}
